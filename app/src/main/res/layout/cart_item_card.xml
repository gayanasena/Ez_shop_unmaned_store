<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="5dp">

    <TextView
        android:id="@+id/txtTitleCart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Item Title"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/txtEachAmount"
        android:layout_width="wrap_content"
        android:layout_below="@id/txtTitleCart"
        android:layout_height="wrap_content"
        android:text="Item Price"
        android:gravity="center"
        android:textColor="@color/black" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_below="@id/txtTitleCart"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Qty - "
            android:gravity="center"
            android:textColor="@color/black" />
        <TextView
            android:id="@+id/txtQtyCart"
            android:layout_width="wrap_content"
            android:layout_below="@id/txtTitleCart"
            android:layout_height="wrap_content"
            android:text="Qty"
            android:gravity="center"
            android:textColor="@color/black" />
    </LinearLayout>
    <TextView
        android:id="@+id/txtItemRemove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtTitleCart"
        android:layout_alignParentEnd="true"
        android:textColor="@color/red"
        android:text="Remove"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="4dp"
        android:background="@color/amber_600"
        android:layout_below="@id/txtItemRemove"/>

</RelativeLayout>